<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/companycardview">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Company Name"
    android:textColor="@color/black"
    android:fontFamily="sans-serif"
    android:id="@+id/staticname"
    ></TextView>

    <TextView
        android:id="@+id/dbname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif"
        android:text=""
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/staticname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Description"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:id="@+id/staticdetail"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/staticname"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/dbname"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_toRightOf="@+id/staticdetail"
        android:id="@+id/dbdescrption"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Job Descption"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:id="@+id/staticjobdescp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/staticdetail"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/dbdescrption"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_toRightOf="@+id/staticjobdescp"
        android:id="@+id/dbjobdescp"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>